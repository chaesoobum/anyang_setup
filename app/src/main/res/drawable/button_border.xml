<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리 아래쪽 선 -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
    </item>
    <!-- 내부를 투명하게 만들기 -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
